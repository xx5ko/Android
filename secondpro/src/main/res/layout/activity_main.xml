<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.secondpro.main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:id="@+id/quantity_text_view"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/quantitytext_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <Button
        android:text="Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/quantity_text_view"
        android:layout_alignRight="@+id/quantity_text_view"
        android:layout_alignEnd="@+id/quantity_text_view"
        android:onClick="submitOrder"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/quantitytext_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/quantity_text_view"
        android:layout_alignEnd="@+id/quantity_text_view" />

</RelativeLayout>
